# LLM Provider Configuration
# Options: openrouter, gemini
LLM_PROVIDER=openrouter

# OpenRouter API Configuration (when using openrouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=qwen/qwen3-coder:free

# Google Gemini API Configuration (when using gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_TRANSPORT=http  # Options: stdio, http, sse

# Multi-MCP Server Configuration (Phase 1)
MCP_CONFIG_PATH=config/mcp-servers.json  # Path to multi-server configuration file
MCP_DEBUG=false  # Enable debug logging for MCP configuration

# Environment variables for MCP server configurations
# These can be referenced in mcp-servers.json using ${VAR_NAME} syntax
DB_SERVER_URL=http://localhost:8000/sse
DB_ACCESS_TOKEN=dev-token
GITHUB_TOKEN=ghp_your_token_here
GITHUB_ORG=your-org
API_GATEWAY_URL=https://api.example.com/mcp
API_KEY=your-api-key
CLIENT_ID=default-client
ENV_NAME=development
WORKSPACE_DIR=/workspace

# FastAPI Server Configuration
FASTAPI_PORT=8001
FASTAPI_HOST=0.0.0.0

# Database Configuration (for MCP server)
DATABASE_PATH=test_data/sample.db
METADATA_PATH=resources/metadata.json

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
ALLOW_CORS=true

# Optional: Custom site information for OpenRouter
SITE_URL=http://localhost:8001
SITE_NAME=Talk2Tables FastAPI Server